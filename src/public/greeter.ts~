interface Window {
    keplr: boolean ;
}

interface Person {
  firstName: string;
  lastName: string;
}

function greeter(person: Person) {

    var useWallet = "; your wallet is not available" ;
    
    if (walletAuthEnabled){
	useWallet = " may use your wallet to authenticate" ;
    }

    return "Hello, " + person.firstName + " " + person.lastName + useWallet ;
}

function walletAuthEnabled() {
  return !!window.keplr ;
}

let user = { firstName: "Jane", lastName: "User" };
 
document.body.textContent = greeter(user);
